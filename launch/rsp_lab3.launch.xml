<?xml version="1.0"?>
<launch>
  <arg name="camera_enable" default="False"/>
  <arg name="intensity_enable" default="True"/>
  <arg name="sonar_enable" default="False"/>
  <arg name="lidar_enable" default="False"/>
  <arg name="encoder_bidirectional" default="True"/>
  <arg name="encoder_ticks" default="540"/>
  <arg name="realsense_enable" default="False"/>
  <include file="$(find-pkg-share  mirte_gazebo)/launch/gazebo_duckietown_world.launch.xml">
    <arg name="duckietown" value="$(find-pkg-share  mirte_gazebo)/maps/rcj.yaml"/>
    <arg name="gui" value="True"/>
    <arg name="lockstep" value="False"/>
  </include>
  <include file="$(find-pkg-share  mirte_gazebo)/launch/spawn_mirte.launch.xml">
    <arg name="camera_enable" value="$(var camera_enable)"/>
    <arg name="intensity_enable" value="$(var intensity_enable)"/>
    <arg name="sonar_enable" value="$(var sonar_enable)"/>
    <arg name="lidar_enable" value="$(var lidar_enable)"/>
    <arg name="realsense_enable" value="$(var realsense_enable)"/>
    <arg name="x" value="1.0527"/>
    <arg name="y" value="0.509611"/>
    <arg name="z" value="0.021444"/>
  </include>
  <!-- <node name="rviz" pkg="rviz" type="rviz" output="screen" args="-d $(find-pkg-share  mirte_gazebo)/mirte_gazebo.rviz" respawn="false"/> -->
  <group if="$(eval intensity_enable or camera_enable or realsense_enable)">
    <node name="video_server" pkg="web_video_server" type="web_video_server"/>
  </group>
  <group if="$(var intensity_enable)">
    <node name="mapIRLeft" pkg="mirte_gazebo" type="convert_ir" output="screen" args="left"/>
    <node name="mapIRRight" pkg="mirte_gazebo" type="convert_ir" output="screen" args="right"/>
  </group>
  <group if="$(var sonar_enable)">
    <node name="mapUltrasonicLeft" pkg="mirte_gazebo" type="convert_sonar" output="screen" args="left"/>
    <node name="mapUltrasonicRight" pkg="mirte_gazebo" type="convert_sonar" output="screen" args="right"/>
  </group>
  <node name="lab3f" pkg="lab3_test" type="lab3" output="screen"/>
</launch>
